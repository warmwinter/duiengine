<layer title="DUI-DEMO" width="600" height="400" appwin="1" ncRect="5,5,5,5"  resize="1" translucent="0"  nomaxsize="0">
	<body>
    <dlg name="maindlg" pos="0,0,-0,-0" class="cls_dlg_frame" crtext="000000">
      <caption pos="0,0,-0,29">
        <text pos="11,9" class="cls_txt_red">%str1% ver:%str2%</text>
        <imgbtn id="1" name="btn_close" skin="btn_sys_close" pos="-45,0" tip="close" animate="0"/>
      </caption>
      <dlg pos="10,29,-10,-10">
        <group pos="0,0,-0,80">rotate param
          <dlg pos="10,20,-10,-0">
            <dlg pos="0,0,|0,-0">
              <dlg pos="0,0,|0,-0">
                <text pos="10,0">rorate-x:</text>
                <sliderbar name="slider_rotatex" pos="5,20,-5,-0" bgskin="prog_bg" posskin="prog_bar" thumbskin="slidethumb" value="20" min="0" max="360"/>
              </dlg>
              <dlg pos="|0,0,-0,-0">
                <text pos="10,0">rorate-y:</text>
                <sliderbar name="slider_rotatey" pos="5,20,-5,-0" bgskin="prog_bg" posskin="prog_bar" thumbskin="slidethumb" value="20" min="0" max="360"/>
              </dlg>
            </dlg>
            <dlg pos="|0,0,-0,-0">
              <dlg pos="0,0,|0,-0">
                <text pos="10,0">rorate-z:</text>
                <sliderbar name="slider_rotatez" pos="5,20,-5,-0" bgskin="prog_bg" posskin="prog_bar" thumbskin="slidethumb" value="20" min="0" max="360"/>
              </dlg>
              <dlg pos="|0,0,-0,-0">
                <text pos="10,0">offset-z:</text>
                <sliderbar name="slider_offsetz" pos="5,20,-5,-0" bgskin="prog_bg" posskin="prog_bar" thumbskin="slidethumb" value="20" min="0" max="500"/>
              </dlg>
            </dlg>
          </dlg>
        </group>
        <image3dprev pos="0,80,-0,-0" name="image3dprev" image="skin_test" rotate-y="0" offset-z="0"/>
      </dlg>
    </dlg>
	</body>
</layer>




